{
    "name": "dtc-workflow-manager-server",
    "version": "1.0.0",
    "description": "Backend API for DTC Workflow Manager",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "prisma:generate": "prisma generate",
        "prisma:migrate": "prisma migrate dev",
        "prisma:studio": "prisma studio",
        "prisma:seed": "tsx prisma/seed.ts",
        "test": "vitest",
        "test:integration": "vitest run --config vitest.integration.config.ts",
        "test:lark": "tsx src/scripts/test-lark-notification.ts"
    },
    "keywords": [
        "workflow",
        "task-management",
        "lark",
        "api"
    ],
    "author": "DTC Team",
    "license": "MIT",
    "dependencies": {
        "@prisma/client": "^6.1.0",
        "express": "^4.21.2",
        "cors": "^2.8.5",
        "helmet": "^8.0.0",
        "dotenv": "^16.4.7",
        "bcryptjs": "^2.4.3",
        "jsonwebtoken": "^9.0.2",
        "zod": "^3.24.1",
        "ws": "^8.18.0",
        "@larksuiteoapi/node-sdk": "^1.37.0",
        "node-cron": "^3.0.3",
        "multer": "^1.4.5-lts.1",
        "compression": "^1.7.5",
        "express-rate-limit": "^7.5.0",
        "winston": "^3.17.0"
    },
    "devDependencies": {
        "@types/node": "^22.14.0",
        "@types/express": "^5.0.0",
        "@types/cors": "^2.8.17",
        "@types/bcryptjs": "^2.4.6",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/ws": "^8.5.13",
        "@types/node-cron": "^3.0.11",
        "@types/multer": "^1.4.12",
        "@types/compression": "^1.7.5",
        "typescript": "^5.8.2",
        "tsx": "^4.19.2",
        "prisma": "^6.1.0",
        "vitest": "^2.1.8"
    }
}